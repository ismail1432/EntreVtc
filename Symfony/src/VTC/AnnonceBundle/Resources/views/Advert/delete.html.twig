{# src/OC/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "VTCAnnonceBundle::layout.html.twig" %}
{% block title %}
  Supprimer une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  <h2>Supprimer une annonce</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'annonce "{{ advert.title }}"    ?

  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('vtc_platform_delete', {'id': advert.id}) }}" method="post">
    <a href="{{ path('vtc_platform_view', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  l'annonce
    </a>
  
    <input type="submit" value="Supprimer" class="btn btn-danger" />

    {{ form_rest(form) }}
    
  </form>

{% endblock %}